<div class="card shadow-sm border-0 bg-light" style="width: 40rem; margin: auto; border-radius: 10px;">
  <div class="card-body p-4">
    <h5 class="card-title text-center fs-3 text-primary fw-bold mb-4">✨ Edit Advertisement ✨</h5>
    <form action="/update" method="POST">
      <!-- Ad Content -->
      <div class="mb-3">
        <div class="form-floating">
          <textarea
            name="content"
            class="form-control border-primary shadow-sm"
            placeholder="Ad content here"
            id="content"
            style="height: 120px; border-radius: 8px;"
            maxlength="210"
          ><%= ad.Content %></textarea>
          <label for="content" class="text-muted">Ad Contents (Max 210 characters)</label>
        </div>
      </div>
      <!-- Character Count -->
      <div class="mb-3 text-end">
        <p id="charCount" class="text-muted">0/210 characters</p>
      </div>
      <!-- Buttons -->
      <div class="d-flex justify-content-center">
        <div class="w-75 d-flex justify-content-around align-items-center">
          <button type="submit" class="btn btn-success px-4 shadow-sm">Update</button>
          <span class="text-secondary fw-bold">OR</span>
          <a href="/user" class="btn btn-danger px-4 shadow-sm">Cancel</a>
        </div>
      </div>
    </form>
  </div>
</div>

<script>
  const textarea = document.getElementById("content");
  const charCount = document.getElementById("charCount");

  // Hiển thị số ký tự ban đầu
  charCount.textContent = `${textarea.value.length}/210 characters`;

  // Cập nhật số ký tự khi người dùng nhập
  textarea.addEventListener("input", () => {
    const currentLength = textarea.value.length;
    charCount.textContent = `${currentLength}/210 characters`;
  });
</script>
