<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
      <h1 class="text-primary fw-bold">Advertisements</h1>
    </div>

    <!-- Table for advertisements -->
    <div class="table-responsive">
      <table class="table table-striped table-hover table-bordered align-middle">
        <thead class="table-info">
          <tr class="text-center">
            <th>#</th>
            <th>Owner</th>
            <th>Content</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% if (ads.length > 0) { %>
            <% ads.forEach((ad, index) => { %>
              <tr>
                <td class="text-center"><%= index + 1 %></td>
                <td class="text-center"><%= ad.Owner %></td>
                <td><%= ad.Content %></td>
                <td class="text-center">
                  <a href="#" class="btn btn-success btn-sm shadow-sm">
                    <i class="bi bi-cloud-upload"></i> Publish
                  </a>
                </td>
              </tr>
            <% }) %>
          <% } else { %>
            <tr>
              <td colspan="4" class="text-center text-muted">No advertisements available</td>
            </tr>
          <% } %>
        </tbody>
      </table>
    </div>
  </div>
