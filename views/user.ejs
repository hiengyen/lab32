<div>
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="text-primary fw-bold">User Panel</h1>
    <a href="/user/create" class="btn btn-primary px-4 py-2" style="border-radius: 5px;">Create New Ads</a>
  </div>

  <table class="table table-bordered table-hover shadow-sm bg-white" style="border-radius: 8px; overflow: hidden;">
    <thead class="table-primary text-center">
      <tr>
        <th style="width: 5%;">#</th>
        <th style="width: 65%;">Content</th>
        <th style="width: 30%;">Actions</th
      </tr>
    </thead>
    <tbody>
      <% ads.forEach((ad, index) => { %>
      <tr>
        <td class="text-center fw-semibold"><%= index += 1 %></td>
        <td><%= ad.Content %></td>
        <td class="text-center">
          <a
            href="/user/edit/<%= ad._id %>"
            class="btn btn-warning btn-sm m-1"
            style="border-radius: 5px;"
          >
            Edit
          </a>
          <a
            href="/user/delete/<%= ad._id %>"
            class="btn btn-danger btn-sm m-1"
            style="border-radius: 5px;"
            onclick="return confirm('Are you sure?')"
          >
            Delete
          </a>
          <button
            class="btn btn-success btn-sm m-1"
            style="border-radius: 5px;"
            onclick="publishContent('<%= username %>', '<%= ad.Content %>')"
          >
            Publish
          </button>
        </td>
      </tr>
      <% }) %>
    </tbody>
  </table>
</div>
