<div class="card shadow-sm border-0 bg-light" style="width: 40rem; margin: auto; margin-top: 2rem; border-radius: 10px">
  <div class="card-body p-4">
    <h3 class="text-center text-primary mb-4">✨ Create Your Ad ✨</h3>
    <form action="/create" method="POST">
      <!-- Ad Contents -->
      <div class="mb-4">
        <div class="form-floating">
          <textarea
            name="content"
            class="form-control border-primary shadow-sm"
            placeholder="Leave a comment here"
            id="content"
            style="height: 120px; border-radius: 8px"
          ></textarea>
          <label for="content" class="text-secondary">Ad Contents (Max 210 characters)</label>
        </div>
      </div>
      <!-- Character Count -->
      <div class="mb-3 text-end">
        <p id="charCount" class="text-muted">0/210 characters</p>
      </div>
      <!-- Buttons -->
      <div class="d-flex justify-content-center">
        <div class="w-75 d-flex justify-content-around align-items-center">
          <button type="submit" class="btn btn-success px-4 shadow-sm">Create</button>
          <span class="text-secondary fw-bold">OR</span>
          <a href="/user" class="btn btn-danger px-4 shadow-sm">Cancel</a>
        </div>
      </div>
    </form>
  </div>
</div>

<script>
  const textarea = document.getElementById("content");
  const charCount = document.getElementById("charCount");

  textarea.addEventListener("input", () => {
    const currentLength = textarea.value.length;
    charCount.textContent = `${currentLength}/210 characters`;
  });
</script>
