<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />
    <title><%= title %></title>
    <style>
      body {
        background-color: #f8f9fa; /* Sáng sủa với nền xám nhạt */
        color: #343a40; /* Văn bản đậm */
      }
      .navbar {
        background-color: #ffffff; /* Thanh điều hướng sáng */
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1); /* Tạo hiệu ứng bóng */
      }
      .navbar-brand {
        font-weight: bold;
        color: #007bff;
      }
      .navbar-brand:hover {
        color: #0056b3;
      }
      .nav-link {
        color: #343a40;
        font-weight: 500;
      }
      .nav-link:hover {
        color: #007bff;
      }
      .container {
        padding: 2rem 1rem;
        background: #ffffff; /* Nền trắng cho nội dung */
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1); /* Tạo cảm giác nổi */
        border-radius: 8px;
      }
      .btn-primary {
        background-color: #007bff;
        border: none;
      }
      .btn-primary:hover {
        background-color: #0056b3;
      }
    </style>
    <script>
      const socket = new WebSocket("ws://localhost:3000");
      function publishContent(deviceId, content) {
        fetch("/publish", { 
          method: "POST", 
          headers: { 
            "Content-Type": "application/json",
          },
          body: JSON.stringify({ device_id: deviceId, content }),
        })
          .then((response) => response.text())
          .then((data) => {
            console.log(data);
          });
      }
    </script>
  </head>
  <body>
    <nav class="navbar navbar-expand-lg">
      <div class="container-fluid">
        <a class="navbar-brand" href="/">Lab 3</a>
        <button
          class="navbar-toggler"
          type="button"
          data-bs-toggle="collapse"
          data-bs-target="#navbarNavDropdown"
          aria-controls="navbarNavDropdown"
          aria-expanded="false"
          aria-label="Toggle navigation"
        >
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse">
          <ul class="navbar-nav me-auto">
            <% if (user && user.role === "admin") { %>
            <li class="nav-item">
              <a class="nav-link" href="/admin">Admin</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/admin/advertisements">Advertisements</a>
            </li>
            <% } %>
          </ul>
          <ul class="navbar-nav ms-auto">
            <% if (user) { %>
            <li class="nav-item">
              <a class="nav-link" href="/logout">Logout</a>
            </li>
            <% } else { %>
            <li class="nav-item">
              <a class="nav-link" href="/login">Login</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/register">Register</a>
            </li>
            <% } %>
          </ul>
        </div>
      </div>
    </nav>

    <div class="container mt-5">
      <%- body %>
    </div>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
